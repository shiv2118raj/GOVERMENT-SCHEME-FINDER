{
  "compilerOptions": {
    "checkJs": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "frontend/src",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["frontend/src/**/*"],
  "exclude": ["node_modules", "build", "backend"]
}
